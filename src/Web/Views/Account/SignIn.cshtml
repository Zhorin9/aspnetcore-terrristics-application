@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/js/extendValidationMessages.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#registerButton').click(function () {
                $('#registerForm').toggle(500);
